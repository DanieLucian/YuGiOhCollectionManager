<UserControl x:Class="WpfDesktopUI.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:WpfDesktopUI.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:MenuViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style
        x:Key="MenuButton"
        TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="25" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="10" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border
        BorderThickness="0 0 5 0"
        BorderBrush="Black">
            <StackPanel
            Orientation="Vertical"
            Background="DarkOliveGreen">

                <Button
                x:Name="LoadCollection"
                Content="My Collection"
                Style="{StaticResource MenuButton}" />
                <Button
                x:Name="LoadCards"
                Style="{StaticResource MenuButton}"
                Content="All Cards" />
            </StackPanel>
        </Border>
        <ContentControl
        x:Name="ActiveItem"
        Grid.Column="1"
        Width="auto"
        Height="auto" />
    </Grid>
</UserControl>
